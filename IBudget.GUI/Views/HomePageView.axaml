<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="IBudget.GUI.Views.HomePageView"
			 xmlns:vm="using:IBudget.GUI.ViewModels"
			 x:DataType="vm:HomePageViewModel"
			 x:CompileBindings="True">

	<ScrollViewer VerticalScrollBarVisibility="Auto">
		<StackPanel Margin="40">
			<!-- Header Section -->
			<StackPanel Spacing="10" Margin="0,0,0,30">
				<TextBlock Text="Welcome to Stacks Money Management Tool"
                          FontSize="28"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Foreground="{DynamicResource TextControlForeground}" />
				<TextBlock Text="Your personal finance management solution"
                          FontSize="14"
                          HorizontalAlignment="Center"
                          Opacity="0.7"
                          Foreground="{DynamicResource TextControlForeground}" />
			</StackPanel>

			<!-- Main Action Card -->
			<Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="30"
                    Margin="0,0,0,20">
				<StackPanel Spacing="15">
					<StackPanel Spacing="8">
						<TextBlock Text="Generate Budget Report"
                                  FontSize="20"
                                  FontWeight="SemiBold"
                                  HorizontalAlignment="Center" />
						<TextBlock Text="Create a comprehensive Excel spreadsheet with your budget tracking, financial goals, and spending analysis."
                                  FontSize="14"
                                  TextWrapping="Wrap"
                                  HorizontalAlignment="Center"
                                  Opacity="0.8"
                                  MaxWidth="400" />
					</StackPanel>

					<Button Content="Generate Excel Report"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Padding="20,12"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Command="{Binding GenerateExcelCommand}"
                            Classes="accent" />

					<TextBlock Text="{Binding Message}"
                              FontSize="14"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              MaxWidth="500"
                              IsVisible="{Binding Message, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
				</StackPanel>
			</Border>

			<!-- Feature Overview Grid -->
			<Grid ColumnDefinitions="1*, 1*" RowDefinitions="Auto, Auto, Auto">

				<!-- Upload CSV Card -->
				<Border Grid.Column="0" Grid.Row="0"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,10,10">
					<StackPanel Spacing="10">
						<PathIcon Data="{StaticResource DocumentRegular}"
                                 Width="32"
                                 Height="32"
                                 Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                 HorizontalAlignment="Left" />
						<TextBlock Text="Upload CSV Data"
                                  FontSize="16"
                                  FontWeight="SemiBold" />
						<TextBlock Text="Import your financial transactions from CSV files to automatically categorize and track your spending patterns."
                                  FontSize="12"
                                  TextWrapping="Wrap"
                                  Opacity="0.8" />
					</StackPanel>
				</Border>

				<!-- Financial Overview Card -->
				<Border Grid.Column="1" Grid.Row="0"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="10,0,0,10">
					<StackPanel Spacing="10">
						<PathIcon Data="{StaticResource DataRegular}"
                                 Width="32"
                                 Height="32"
                                 Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                 HorizontalAlignment="Left" />
						<TextBlock Text="Financial Overview"
                                  FontSize="16"
                                  FontWeight="SemiBold" />
						<TextBlock Text="View comprehensive analytics and insights about your spending habits, trends, and financial health."
                                  FontSize="12"
                                  TextWrapping="Wrap"
                                  Opacity="0.8" />
					</StackPanel>
				</Border>

				<!-- Tags Management Card -->
				<Border Grid.Column="0" Grid.Row="1"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,10,10,10">
					<StackPanel Spacing="10">
						<PathIcon Data="{StaticResource TagRegular}"
                                 Width="32"
                                 Height="32"
                                 Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                 HorizontalAlignment="Left" />
						<TextBlock Text="Manage Tags"
                                  FontSize="16"
                                  FontWeight="SemiBold" />
						<TextBlock Text="Create and organize spending categories with custom tags to better track where your money goes."
                                  FontSize="12"
                                  TextWrapping="Wrap"
                                  Opacity="0.8" />
					</StackPanel>
				</Border>

				<!-- Financial Goals Card -->
				<Border Grid.Column="1" Grid.Row="1"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="10,10,0,10">
					<StackPanel Spacing="10">
						<PathIcon Data="{StaticResource MoneyRegular}"
                                 Width="32"
                                 Height="32"
                                 Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                 HorizontalAlignment="Left" />
						<TextBlock Text="Financial Goals"
                                  FontSize="16"
                                  FontWeight="SemiBold" />
						<TextBlock Text="Set and monitor your savings targets, budget limits, and financial milestones to stay on track."
                                  FontSize="12"
                                  TextWrapping="Wrap"
                                  Opacity="0.8" />
					</StackPanel>
				</Border>

				<!-- Quick Stats Section -->
				<Border Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,10,0,0">
					<StackPanel Spacing="15">
						<TextBlock Text="What's Included in Your Report"
                                  FontSize="16"
                                  FontWeight="SemiBold"
                                  HorizontalAlignment="Center" />

						<Grid ColumnDefinitions="1*, 1*, 1*">
							<StackPanel Grid.Column="0" Spacing="5" Margin="0,0,15,0">
								<TextBlock Text="ðŸ“Š Monthly Summaries"
                                          FontSize="14"
                                          FontWeight="Medium" />
								<TextBlock Text="Detailed breakdown of income and expenses by month"
                                          FontSize="12"
                                          Opacity="0.8"
                                          TextWrapping="Wrap" />
							</StackPanel>

							<StackPanel Grid.Column="1" Spacing="5" Margin="15,0">
								<TextBlock Text="ðŸ“ˆ Weekly Analysis"
                                          FontSize="14"
                                          FontWeight="Medium" />
								<TextBlock Text="Week-by-week spending patterns and trends"
                                          FontSize="12"
                                          Opacity="0.8"
                                          TextWrapping="Wrap" />
							</StackPanel>

							<StackPanel Grid.Column="2" Spacing="5" Margin="15,0,0,0">
								<TextBlock Text="ðŸŽ¯ Goal Tracking"
                                          FontSize="14"
                                          FontWeight="Medium" />
								<TextBlock Text="Progress monitoring for all your financial goals"
                                          FontSize="12"
                                          Opacity="0.8"
                                          TextWrapping="Wrap" />
							</StackPanel>
						</Grid>
					</StackPanel>
				</Border>
			</Grid>

			<!-- Footer -->
			<StackPanel Spacing="8" Margin="0,30,0,0">
				<TextBlock Text="Navigate using the menu on the left to manage your data and settings."
                          FontSize="12"
                          HorizontalAlignment="Center"
                          Opacity="0.6" />
				<TextBlock Text="Version 0.1.0"
                          FontSize="11"
                          HorizontalAlignment="Center"
                          Opacity="0.5"
                          FontStyle="Italic" />
			</StackPanel>
		</StackPanel>
	</ScrollViewer>

</UserControl>